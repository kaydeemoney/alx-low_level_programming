#include "3-calc.h"

/**
 * get_op_func - function pointers that select the correct function to perform
 * the operation asked by the users
 * @s: the operator given by the users
 *
 * Return: pointers to the function that corresponds to the
 * operator given as a parameters
 */
int (*get_op_func(char *s))(int, int)
{
	op_t ops[] = {
		{"+", op_add},
		{"-", op_sub},
		{"*", op_mul},
		{"/", op_div},
		{"%", op_mod},
		{NULL, NULL}
	};
	int x;

	x = 0;

	while (ops[x].op)
	{
		if (strcmp(ops[x].op, s) == 0)
			return (ops[x].f);
		x++;
	}

	return (NULL);
}
