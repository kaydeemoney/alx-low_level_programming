#include <stdio.h>
/**
 * main - Entry point
 *
 * Description: a program that prints the lowercase alphabet in reverse, followed by a new line.
 * Return: Always 0 (Success)
 */
int main(void) {
char alphabet[] = "abcdefghijklmnopqrstuvwxyz";
int num_of_alphabet = 26;

while (num_of_alphabet > 0) 
{
putchar(alphabet[num_of_alphabet - 1]);
num_of_alphabet = num_of_alphabet - 1;
}
putchar(10);
return (0);
}
